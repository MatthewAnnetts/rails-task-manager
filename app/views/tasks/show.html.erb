<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%= @task.completed ? "[x] This task is completed" : "[ ] This task is not yet completed" %>
<p><%= link_to "Update task", edit_path %></p>
<p><%= link_to "Delete task", task_path(@task), method: :delete%></p>
<p><%= link_to 'Back to list', tasks_path %></p>
